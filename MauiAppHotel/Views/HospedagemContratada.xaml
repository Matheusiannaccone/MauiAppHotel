<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray200}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{StaticResource MidnightBlue}"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10"
               BackgroundColor="LightBlue">
            <StackLayout Orientation="Horizontal">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: "
                           FontFamily="Kalam-Bold"/>
                    <Label Text="{Binding QntAdultos}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="CrianÃ§as: "
                           FontFamily="Kalam-Bold"/>
                    <Label Text="{Binding QntCriancas}"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <Frame Margin="10"
               BackgroundColor="LightBlue">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto"
                  ColumnSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in"
                       FontFamily="Kalam-Bold"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out"
                       FontFamily="Kalam-Bold"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia"
                       FontFamily="Kalam-Bold"/>

                <Label Grid.Row="1" Grid.Column="0"
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       FontSize="15"/>
                <Label Grid.Row="1" Grid.Column="1"
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                       FontSize="15"/>
                <Label Grid.Row="1" Grid.Column="2"
                       Text="{Binding Estadia}"
                       FontSize="15"/>
            </Grid>
        </Frame>

        <Frame Margin="10"
               BackgroundColor="LightBlue">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Valor Total: "
                       FontFamily="Kalam-Bold"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"
                       FontSize="15"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>